<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--The following patches all look for the RimCuisine 2: Meals and Munchies submod and adds bulk recipes to the Cook-o-matic.  Otherwise, they aren't added.-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RimCuisine 2 Meals and Munchies Expansion (Continued)</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/RecipeDef[defName = "RC2_MakeVegetableJuiceBulk"]</xpath>
      <value>
        <recipeUsers>
          <li>RC2_Cookomatic</li>
        </recipeUsers>
      </value>
    </match>
  </Operation>
