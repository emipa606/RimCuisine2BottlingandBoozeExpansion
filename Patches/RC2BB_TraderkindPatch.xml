<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Traderkind Patches-->
  <!--Adds the two new trader categories to the faction trader lists.-->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[@Name = "TribeBase"]/caravanTraderKinds</xpath>
        <value>
          <li>RC2_Caravan_Neolithic_Brewer</li>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[@Name = "OutlanderFactionBase"]/caravanTraderKinds</xpath>
        <value>
          <li>RC2_Caravan_Outlander_Brewer</li>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>
