<Defs>
  <RecipeDef ParentName="RC2_CookJoyMealBase">
    <defName>RC2_MakeVegetableJuiceBulk</defName>
    <label>make vegetable juice in bulk</label>
    <description>Uses one or more vegetables to make delicious juice.  Makes 25.</description>
    <jobString>Making juice.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>True</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <workAmount>800</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>RC2_VegetablesRaw</li>
          </categories>
        </filter>
        <count>2.5</count>
      </li>
    </ingredients>
    <products>
      <RC2_VegetableJuice>25</RC2_VegetableJuice>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>RC2_VegetablesRaw</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>RC2_VegetablesRaw</li>
      </categories>
    </defaultIngredientFilter>
  </RecipeDef>
