  <ThingDef ParentName="RC2_JoyDrinkBase">
    <defName>RC2_EnergyDrink</defName>
    <label>energy drink</label>
    <description>A sugary, often tangy drink made from excessive amounts of sugar, coffee and some fruit to taste.  Very high amounts of caffeine, don't drink too many of these!</description>
    <graphicData>
      <texPath>RC2_Things/RC2_Food/EnergyDrink</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>25</stackLimit>
    <statBases>
      <MarketValue>3</MarketValue>
      <DeteriorationRate>.5</DeteriorationRate>
      <Mass>0.3</Mass>
      <Nutrition>0.02</Nutrition>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <foodType>Fluid, Processed</foodType>
      <joyKind>Meditative</joyKind>
      <preferability>NeverForNutrition</preferability>
      <joy>0.2</joy>
      <ingestSound>Ingest_Beer</ingestSound>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <chairSearchRadius>25</chairSearchRadius>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RC2_Caffeine</hediffDef>
          <severity>0.37</severity>
          <toleranceChemical>RC2_Caffeine</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>0.15</offset>
          <toleranceChemical>RC2_Caffeine</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RC2_CaffeineTolerance</hediffDef>
          <severity>0.03</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>RC2_Caffeine</chemical>
        <addictiveness>0.03</addictiveness>
        <minToleranceToAddict>0.0</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.15</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>1100</listOrder>
      </li>
    </comps>
  </ThingDef>
</Defs>