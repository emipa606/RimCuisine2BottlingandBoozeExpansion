<Defs>
  <RecipeDef ParentName="RC2_CookJoyMealBase">
    <defName>RC2_MakeVegetableJuice</defName>
    <label>make vegetable juice</label>
    <description>Uses one or more vegetables to make delicious juice.  Makes 5.</description>
    <jobString>Making juice.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>True</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <workAmount>400</workAmount>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>RC2_VegetablesRaw</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <RC2_VegetableJuice>5</RC2_VegetableJuice>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>RC2_VegetablesRaw</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>RC2_VegetablesRaw</li>
      </categories>
    </defaultIngredientFilter>
    <skillRequirements>
      <Cooking>1</Cooking>
    </skillRequirements>
    <researchPrerequisite>RC2_IntermediateCooking</researchPrerequisite>
  </RecipeDef>
